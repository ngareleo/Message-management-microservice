<link rel="stylesheet" href="/stylesheets/login.css" />
<div
  class="main-content-container unloaded"
  ng-app="LoginModule"
  ng-controller="LoginCtrl"
>
  <div class="login-img-container"></div>

  <div class="login-page-content">

    <div class="flash-message" ng-class="{show: showFlash}">
      <p id="flashmessage" ng-bind="errorMessage"></p>
      <p id="closebutton" ng-click="closeFlash()">&times</p>
    </div>

    <div class="logo-container">
      <div class="img-container">
        <img src="/static/Navigation-Primary-finance-logo.svg" alt="Finance" />
      </div>
      <div class="img-container">
        <img src="/static/menu-alt-3.svg" alt="Menu" />
      </div>
    </div>

    <div class="page-content">
      <div class="page-header">
        <div class="page-greeting">
          <p id="welcome-message">Welcome back</p>
        </div>
        <div class="page-login-header">
          <p id="login-message">Login to your account</p>
        </div>
      </div>

      <!--Login form-->
      <div class="form-container">
        <form name="loginForm" ng-submit="submitForm()" class="loginForm">
          <div class="username-field">
            <label for="username-field">Username</label>
            <input
              type="text"
              name="username"
              id="username-field"
              autocomplete="off"
              ng-change="changeUsername()"
              ng-model="userUsername"
              ng-minlength="4"
              required
            />
          </div>

          <div class="password-field">
            <label for="password-field">Password</label>
            <input
              type="password"
              name="password"
              id="password-field"
              ng-model="userPassword"
              ng-change="passwordChange()"
              ng-minlength="4"
              required
            />

            <div class="password-helpers">
              <div class="rem-me">
                <input
                  type="checkbox"
                  name="remember"
                  id="remember-me"
                  value="Remember me"
                />
                <label for="password-field">Remember me</label>
              </div>
              <a href="/forgot" id="forgot-pass-link">Forgot password?</a>
            </div>
          </div>
          <input
            type="submit"
            value="Log in"
            id="login-button"
            ng-disabled="loginForm.$invalid"
          />
        </form>
      </div>
    </div>

  </div>
</div>
<script
  src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"
></script>
<script src="/javascripts/login.angular.js"></script>
<script>
  window.onload = () => {
  document.querySelector('.main-content-container.unloaded')
  document.querySelector('.main-content-container.unloaded').classList.remove('unloaded')
  }
</script>