link(rel="stylesheet", href="/stylesheets/login.css")
div.main-content-container.unloaded(ng-app="LoginModule", ng-controller="LoginCtrl")
  div.login-img-container
  div.login-page-content
    div.logo-container
      div.img-container
        img(src="/static/Navigation-Primary-finance-logo.svg", alt="Finance")
      div.img-container
        img(src="/static/menu-alt-3.svg", alt="Menu")
    div.page-content
      div.page-header
        div.page-greeting
          p#welcome-message Welcome
        div.page-login-header
          p#login-message Create a new account

      div.form-container
        form(name="loginForm", class="loginForm", method="post", action="/signup")
          div.username-field
            label(for="username-field") Username
            input(type="text", name="username", id="username-field", autocomplete="off", ng-change="changeUsername()", ng-model="userUsername", ng-minlength="4", required)
          div.password-field
            label(for="password-field") Password
            input(type="password", name="password", id="password-field", ng-model="userPassword", ng-minlength="4", required)
          input(type="submit", value="Create account", id="login-button", ng-disabled="loginForm.$invalid")

script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js")
script(src="/javascripts/signup.angular.js")
script.
  window.onload = () => {
  document.querySelector('.main-content-container.unloaded')
  document.querySelector('.main-content-container.unloaded').classList.remove('unloaded')
  }